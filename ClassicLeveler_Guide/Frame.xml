<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.blizzard.com/wow/ui/">
	<Script file="Frame.lua" />
	<Frame name="Guide" parent="UIParent" toplevel="true" movable="true" resizable="true" enableMouse="true" enableMouseClicks="true" enableMouseMotion="true">
		<Size x="400" y="300" />
		<Anchors>
			<Anchor point="CENTER" x="0" y="0" />
		</Anchors>
		<Backdrop edgeFile="Interface\AddOns\ClassicLeveler_Guide\Textures\Borders\fer6" tile="true">
			<Color a="1" r="0.5" g="0.5" b="1" />
		</Backdrop>
		<Frames>
			<Button name="parentResizeButton">
				<Size x="16" y="16" />
				<Anchors>
					<Anchor point="BOTTOMRIGHT" x="0" y="0" />
				</Anchors>
				<Scripts>
					<OnMouseDown>
						Guide:StartSizing("BOTTOMRIGHT");
						Guide.IsDragging = 1
					</OnMouseDown>
					<OnMouseUp>
						Guide.IsDragging = 0
						Guide:StopMovingOrSizing();
					</OnMouseUp>
				</Scripts>
				<NormalTexture file="Interface\AddOns\ClassicLeveler_Guide\images\UI-ChatIM-SizeGrabber-Up" />
				<PushedTexture file="Interface\AddOns\ClassicLeveler_Guide\images\UI-ChatIM-SizeGrabber-Down" />
				<HighlightTexture file="Interface\AddOns\ClassicLeveler_Guide\images\UI-ChatIM-SizeGrabber-Highlight" />
			</Button>

			<Button name="nextButton">
				<Size x="32" y="22" />
				<Scripts>
					<OnClick>
						Guide_NextStep()
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\AddOns\ClassicLeveler_Guide\Textures\Buttons\Button-DoubleArrowRight-Normal" />
				<PushedTexture file="Interface\AddOns\ClassicLeveler_Guide\Textures\Buttons\Button-DoubleArrowRight-Pushed" />
				<HighlightTexture file="Interface\AddOns\ClassicLeveler_Guide\Textures\Buttons\Button-DoubleArrowRight-Highlight" />
			</Button>
			<Button name="prevButton" parent="Guide">
				<Size x="32" y="22" />
				<Scripts>
					<OnClick>
						Guide_PrevStep()
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\AddOns\ClassicLeveler_Guide\Textures\Buttons\Button-DoubleArrowLeft-Normal" />
				<PushedTexture file="Interface\AddOns\ClassicLeveler_Guide\Textures\Buttons\Button-DoubleArrowLeft-Pushed" />
				<HighlightTexture file="Interface\AddOns\ClassicLeveler_Guide\Textures\Buttons\Button-DoubleArrowLeft-Highlight" />
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				Guide_OnLoad();
			</OnLoad>
			<OnDragStop>
				Guide:StopMovingOrSizing();
			</OnDragStop>
			<OnDragStart>
				Guide:StartMoving();
			</OnDragStart>
		</Scripts>
	</Frame>
</Ui>